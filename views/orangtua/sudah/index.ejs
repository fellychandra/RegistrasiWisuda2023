<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row">
            <div class="col-xl">
                <h2>Daftar <%- title %></h3>
                <div class="nav-align-top mb-4">
                    <%-include('../tabDaftar.ejs');%>
                        <div class="tab-content">
                            <div class="tab-panel fade show active" id="navs-top-home" role="tabpanel">
                                <div class="card">
                                    <div class="row card-header">
                                        <div class="col">
                                            <h2 class="">Tabel <%- title %></h4>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="text-nowrap">

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label for="" class="form-label">Nama</label>
                                                    <input type="text" name="nama" id="filter_nama" class="form-control filter filter_nama">
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="" class="form-label">NIM</label>
                                                    <input type="text" name="nim" id="filter_nim" class="form-control filter filter_nim">
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="" class="form-label">Jurusan</label>
                                                    <select name="jurusan" id="filter_prodi" class="form-select filter filter_prodi" style="width: 100%;">
                                                        <option value="">-- Pilih --</option>
                                                        <% prodis.forEach(prodi => { %>
                                                            <option value="<%= prodi.prodi %>"><%= prodi.prodi %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                            <hr class="hr" style="margin: 1%;"/>

                                            <table class="table table-hover" id="dataTableOrtuSudahRegis">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <!-- <th>NIM</th> -->
                                                        <th>Nama</th>
                                                        <th>Program Studi</th>
                                                        <th>No Kursi</th>
                                                        <th>Registrasi</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('./script/ortuSudahScript.ejs'); %>
